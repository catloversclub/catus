generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String   @id @default(uuid(7))
  kakaoId          String   @unique @map("kakao_id")
  nickname         String   @unique
  isLivingWithCat  Boolean  @default(false) @map("is_living_with_cat")
  hasAgreedToTerms Boolean  @default(false) @map("has_agreed_to_term")
  phone            String?
  profileImageUrl  String?  @map("profile_image_url")
  createdAt        DateTime @default(now()) @map("created_at")

  cats                  Cat[]
  favoriteAppearances   Appearance[]
  favoritePersonalities Personality[]
  posts                 Post[]
  comments              Comment[]
  postLikes             PostLike[]
  commentLikes          CommentLike[]

  @@map("user")
}

enum Gender {
  MALE
  FEMALE
  UNKNOWN
}

model Cat {
  id              String    @id @default(uuid(7))
  name            String
  gender          Gender    @default(UNKNOWN)
  profileImageUrl String?   @map("profile_image_url")
  birthDate       DateTime? @map("birth_date") @db.Date
  breed           String?
  type            Int?
  createdAt       DateTime  @default(now()) @map("created_at")

  butler        User          @relation(fields: [butlerId], references: [id], onDelete: Cascade)
  butlerId      String
  appearances   Appearance[]
  personalities Personality[]
  posts         Post[]

  @@index([butlerId, id])
  @@map("cat")
}

model Appearance {
  id    Int    @id @default(autoincrement())
  label String @unique()

  users User[]
  cats  Cat[]

  @@map("appearance")
}

model Personality {
  id    Int    @id @default(autoincrement())
  label String @unique()

  users User[]
  cats  Cat[]

  @@map("personality")
}

model Post {
  id        String   @id @default(uuid(7))
  likeCount Int      @default(0) @map("like_count")
  content   String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  authorId String  @map("butler_id")
  author   User    @relation(fields: [authorId], references: [id], onDelete: Cascade)
  catId    String? @map("cat_id")
  cat      Cat?    @relation(fields: [catId], references: [id], onDelete: SetNull)

  images   PostImage[]
  comments Comment[]
  likes    PostLike[]

  @@index([authorId, id])
  @@index([catId, id])
  @@map("post")
}

model PostImage {
  id    String @id @default(uuid(7))
  url   String
  order Int

  postId String @map("post_id")
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@unique([postId, order])
  @@map("post_image")
}

model Comment {
  id        String   @id @default(uuid(7))
  likeCount Int      @default(0) @map("like_count")
  content   String
  createdAt DateTime @default(now())

  postId   String @map("post_id")
  post     Post   @relation(fields: [postId], references: [id], onDelete: Cascade)
  authorId String @map("author_id")
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  parentId     String?       @map("parent_id")
  parent       Comment?      @relation("CommentToComment", fields: [parentId], references: [id], onDelete: Cascade)
  replies      Comment[]     @relation("CommentToComment")
  commentLikes CommentLike[]

  @@index([postId, id])
  @@index([parentId, id])
  @@map("comment")
}

model PostLike {
  postId String @map("post_id")
  userId String @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")

  post Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([postId, userId])
  @@map("post_like")
}

model CommentLike {
  commentId String @map("comment_id")
  userId    String @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")

  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([commentId, userId])
  @@map("comment_like")
}
